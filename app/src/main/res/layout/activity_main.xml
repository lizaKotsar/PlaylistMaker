<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_Blue"
    android:orientation="vertical"
    android:padding="0dp"
    android:id="@+id/main"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"
        android:layout_marginBottom="@dimen/title_margin_bottom"
        android:layout_marginLeft="@dimen/title_margin_left"
        android:layout_marginTop="@dimen/title_margin_top"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:iconGravity="textStart"
        app:icon="@drawable/lypa"
        app:iconTint="@color/black"
        app:iconSize="@dimen/icon_size"
        android:backgroundTint="@color/white"
        android:text="@string/search"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/button_margin_bottom_small"
        android:layout_marginHorizontal="@dimen/button_margin_horizontal"
        app:cornerRadius="@dimen/button_corner_radius"/>

    <Button
        android:id="@+id/media_button"
        app:icon="@drawable/media_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:iconSize="@dimen/icon_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/button_margin_bottom_small"
        android:backgroundTint="@color/white"
        android:text="@string/media"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/button_margin_horizontal"
        app:cornerRadius="@dimen/button_corner_radius"/>

    <Button
        android:id="@+id/settings_button"
        app:icon="@drawable/nastroiki_icon"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:iconSize="@dimen/icon_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/button_margin_bottom_big"
        android:backgroundTint="@color/white"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/button_text_size"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/button_margin_horizontal"
        app:cornerRadius="@dimen/button_corner_radius"/>
</LinearLayout>
