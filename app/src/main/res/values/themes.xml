<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Основная тема приложения -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Фон всего экрана -->
        <item name="android:windowBackground">@color/YP_Blue</item>

        <!-- Цвет кнопок и других основных элементов -->
        <item name="colorPrimary">@color/white</item>
        <!-- Цвет текста/иконок на colorPrimary -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Цвет фона контента -->
        <item name="colorSecondary">@color/white</item>
        <!-- Цвет текста/иконок на фоне colorSecondary -->
        <item name="colorOnSecondary">@color/black</item>

        <item name="iconsetting">@color/YP_Text_Gray</item>
        <item name="navsetting">@color/white</item>

        <item name="navIcon">@color/black</item>
        <!-- Цвет статус-бара и навигационной панели -->
        <item name="android:statusBarColor">@color/YP_Blue</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/YP_Blue</item>

    </style>
</resources>
