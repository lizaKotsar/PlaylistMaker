<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Основная тема приложения (ночная) -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Тёмный фон экрана -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Цвет кнопок и основных элементов -->
        <item name="colorPrimary">@color/white</item>
        <!-- Цвет текста/иконок на colorPrimary -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Цвет фона контента -->
        <item name="colorSecondary">@color/black</item>
        <!-- Цвет текста/иконок на фоне colorSecondary -->
        <item name="colorOnSecondary">@color/white</item>

        <item name="iconsetting">@color/white</item>
        <item name="navsetting">@color/black</item>
        <item name="navIcon">@color/white</item>

        <!-- Цвет статус-бара и навигационной панели -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>
</resources>
